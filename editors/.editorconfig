root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_size = 4

[*.json]
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

[*.helm]
indent_style = space
indent_size = 2

[*.sql]
indent_size = 4
trim_trailing_whitespace = false

[*.rs]
indent_size = 4
max_line_length = 100

[*.go]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[*.lua]
indent_size= 2
indent_style= space
max_line_length = 150
quote_style = auto_prefer_single


